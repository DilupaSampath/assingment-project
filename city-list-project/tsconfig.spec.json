
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types":  ["jest", "node"],
    "module": "commonjs",
    "allowJs": true
  },
  "target": "es6",
  "esModuleInterop": true,
  "files": ["src/polyfills.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"],
  "emitDecoratorMetadata": true
}
